@using ProgrammersBlog.Entities.Dtos;
@model ArticleListDto
@{
    ViewBag.Title = "Makaleler";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Son Paylaşılan Makaleler
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Küçük Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Aktif Mi?</th>
                        <th>Silinmiş Mi?</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kullanıcı Adı</th>
                        <th>Son Düzenlenme Tarihi</th>
                        <th>Son Düzenleyen Kullanıcı Adı</th>
                        <th>Operasyonlar</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>Kategori</th>
                        <th>Başlık</th>
                        <th>Küçük Resim</th>
                        <th>Tarih</th>
                        <th>Okunma Sayısı</th>
                        <th>Yorum Sayısı</th>
                        <th>Aktif Mi?</th>
                        <th>Silinmiş Mi?</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Oluşturan Kullanıcı Adı</th>
                        <th>Son Düzenlenme Tarihi</th>
                        <th>Son Düzenleyen Kullanıcı Adı</th>
                        <th>Operasyonlar</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var article in Model.Articles)
                    {
                        <tr>
                            <td>@article.Id</td>
                            <td>@article.Category.Name</td>
                            <td>@article.Title</td>
                            <td><img src="~/img/@article.Thumbnail" class="my-image-table" /></td>
                            <td>@article.Date.ToShortDateString()</td>
                            <td>@article.ViewCount</td>
                            <td>@article.CommentCount</td>
                            <td>@(article.IsActive ? "Evet" : "Hayır")</td>
                            <td>@(article.IsDeleted ? "Evet" : "Hayır")</td>
                            <td>@article.CreatedDate.ToShortDateString()</td>
                            <td>@article.CreatedByName</td>
                            <td>@article.ModifiedDate.ToShortDateString()</td>
                            <td>@article.ModifiedByName</td>
                            <td>
                                <button class="btn btn-sm btn-primary btn-update" data-id="@article.Id">
                                    <span class="fa fa-solid fa-pen-to-square">Düzenle</span>
                                </button>
                                <button class="btn btn-sm btn-danger btn-delete" data-id="@article.Id">
                                    <span class="fa fa-solid fa-trash-can">Sil</span>
                                </button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
    {
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}


